import turtle

wn = turtle.Screen()

wn.bgcolor('black')
wn.title("PingPong")
wn.setup(height=600, width=800)

#Score!!!
score_a = 0
score_b = 0




# paddle1 (firt player) setup

paddle1 = turtle.Turtle()
paddle1.speed(0)
paddle1.shape("square")
paddle1.color("white")
paddle1.shapesize(stretch_wid=5, stretch_len=1)
paddle1.penup()
paddle1.goto(-350, 0)


# paddle1 movement

def paddle1_up():
    y = paddle1.ycor()
    y += 20
    paddle1.sety(y)

def paddle1_down():
    y = paddle1.ycor()
    y -= 20
    paddle1.sety(y)


wn.listen()
